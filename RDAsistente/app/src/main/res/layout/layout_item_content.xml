<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="120dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_happy_face"
            android:layout_height="match_parent" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:maxLines="3"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam et eros sit amet purus finibus mattis. Maecenas eu urna interdum, molestie eros at, ullamcorper est. Nunc sit amet enim ligula. Curabitur ultricies ante eget vehicula fringilla. In porttitor commodo tempus. Vestibulum malesuada lobortis dui, vel lacinia elit fringilla eget. Maecenas quis metus ac quam hendrerit pulvinar. Sed cursus imperdiet nisl nec elementum"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>